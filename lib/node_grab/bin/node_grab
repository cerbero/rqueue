#!/bin/bash


APP_NAME=node_grab
APP_PATH=../node_grab.rb

JRUBY=`less ../data/config.yml | grep "jruby_path" | awk '{print $2}'`
export GEM_HOME=`less ../data/config.yml | grep "gem_path" | awk '{print $2}'`


LOGFILE=../data/$APP_NAME.log
ERRFILE=../data/$APP_NAME.err
PIDFILE=../data/$APP_NAME.pid


# ---------------------------------------------------
WRAPPER='
	require "rubygems";
	require "spoon";
	pid = Spoon.spawnp(*ARGV[1..-1]);
	File.open(ARGV[0], "w") { |f| f << pid };
	'

#COMMAND="$JRUBY -e '$WRAPPER' '$PIDFILE' '$JRUBY' '$APP_PATH'"
COMMAND="$JRUBY -e '$WRAPPER' '$PIDFILE' '$JRUBY' --1.9 -X+O '$APP_PATH'"

start_daemon() {
	if [ -e "$PIDFILE" ]; then
		echo "PID file already exists."
		exit 1
	else
		echo "Starting $APP_NAME."
		eval $COMMAND >> $LOGFILE 2>> $ERRFILE
		echo $?
	fi
}

stop_daemon() {
	if [ -e "$PIDFILE" ]; then
		echo "Stopping $APP_NAME."
		PID=`cat $PIDFILE`
		while [ 1 ]; do
		kill -TERM $PID 2> /dev/null
		sleep 1
		[ `ps $PID 2> /dev/null | grep $PID | wc -l` -eq 0 ] && break
		done
		rm $PIDFILE
	else
		echo "PID file not found."
		exit 1
	fi
}

case $1 in
	start)
		start_daemon
	;;
	stop)
		stop_daemon
	;;
	restart)
		stop_daemon
		sleep 1
		start_daemon
	;;
esac
exit 0
